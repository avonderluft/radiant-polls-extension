%h1= t('remove_poll')

%p 
  = t('text.polls.remove_warning')

%table.index#polls
  %tbody
    %tr.node.level_1
      %td.poll
        = image('poll', :alt => "")
        %span.title= @poll.title

- form_for [:admin, @poll], :html => {:method => :delete, 'data-onsubmit_status'=>"Removing poll&#8230;"} do
  .buttons
    %input.button{:type=>"submit", :value => t('delete_poll')}/
    = t('or')
    = link_to t('cancel'), admin_polls_url